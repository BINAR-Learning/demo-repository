{
  "name": "fcm-push-notification-server",
  "version": "1.0.0",
  "description": "FCM Push Notification Server using Firebase Admin SDK",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --runInBand --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --runInBand --detectOpenHandles --forceExit --coverageThreshold=\"{\\\"global\\\":{\\\"branches\\\":90,\\\"functions\\\":90,\\\"lines\\\":90,\\\"statements\\\":90}}\""
  },
  "keywords": [
    "fcm",
    "firebase",
    "push-notifications",
    "nodejs",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "app.js",
      "fcmservice.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
